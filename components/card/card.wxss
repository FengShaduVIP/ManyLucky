.daily-header {
  position: relative;
  padding: 4rpx 0 20rpx;
  font-size: 42rpx;
  color: #ff5353;
  font-weight: 900;
}

.daily-item {
  margin: 5rpx 15rpx;
  border:2px solid rgb(243, 240, 240);
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 24rpx;
}

.daily-img {
  padding: 5rpx 0 0 0;
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.daily-body {
  padding: 10rpx;
}

.daily-title {
  font-size: 34rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.daily-desc {
  display: flex;
  color: #999;
  font-size: 25rpx;
  padding: 15rpx 0 8rpx;
}
.daily-view {
  display: flex;
  color: #999;
  font-size: 28rpx;
  padding: 15rpx 0 8rpx;
}

.daily-sponsor {
  position: absolute;
  top: 20rpx;
  right: 0;
  background: #fea901;
  color: #fff;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  max-width: 600rpx;
  padding: 0 20rpx;
  border-radius: 25rpx 0 0 25rpx;
}

