.daily-header {
    position: relative;
    padding: 4rpx 0 20rpx;
    font-size: 42rpx;
    color: #ff5353;
    font-weight: 900;
}

.daily-item {
    margin: 5rpx 15rpx;
    border:2px solid rgb(243, 240, 240);
    position: relative;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 24rpx;
}

.daily-img {
  padding: 5rpx 0 0 0;
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.daily-body {
    padding: 10rpx;
}

.daily-title {
  font-size: 34rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.daily-desc {
  display: flex;
  color: #999;
  font-size: 25rpx;
  padding: 15rpx 0 8rpx;
}
.daily-view {
  display: flex;
  color: #999;
  font-size: 28rpx;
  padding: 15rpx 0 8rpx;
}

.daily-sponsor {
    position: absolute;
    top: 20rpx;
    right: 0;
    background: #fea901;
    color: #fff;
    font-size: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    white-space: nowrap;
    overflow: hidden;
    max-width: 600rpx;
    padding: 0 20rpx;
    border-radius: 25rpx 0 0 25rpx;
}

.question_btn_icon {
    width: 20px;
    height: 20px;
    margin: 10px 5px 10px 10px;
}

.question_btn_cell:hover .question_btn_icon {
    animation: icon_rotate 0.3s 0s linear 1 normal;
}

.question_btn_title {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 40px;
    color: #007aff;
    font-size: 12px;
}
.btn_boder_right {
    box-sizing: border-box;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid transparent;
    border-left: 1px solid transparent;
    border-right: 1px solid #f5f5f5;
}

.question_btn_box {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    height: 40px;
}